{
  "useTabs": false,
  "tabWidth": 4,
  "printWidth": 150,
  "overrides": [
    {
      "files": ["*.ts", "*.mts", "*.d.ts"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.component.html"],
      "options": {
        "parser": "angular"
      }
    }
  ]
}
